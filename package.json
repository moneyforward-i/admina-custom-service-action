{
  "name": "admina-custom-service-action",
  "version": "1.0.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "description": "GitHub Action to sync data from various cloud services to Admina",
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run package"
  },
  "repository": "github:moneyforward-i/admina-custom-service-action",
  "keywords": [
    "actions",
    "node",
    "admina"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@supercharge/promise-pool": "^3.0.0",
    "axios": "^1.5.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/node": "^20.4.9",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.48.0",
    "eslint-plugin-github": "^4.10.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1"
  }
}
