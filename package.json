{
  "name": "admina-custom-service-action",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "description": "GitHub Action to sync data from various cloud services to Admina",
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run package"
  },
  "repository": "github:moneyforward-i/admina-custom-service-action",
  "keywords": [
    "actions",
    "node",
    "admina"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@supercharge/promise-pool": "^3.2.0",
    "axios": "^1.8.4",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vercel/ncc": "^0.38.3",
    "dotenv": "^17.2.3",
    "glob": "^12.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "overrides": {
    "glob": "^12.0.0"
  }
}
